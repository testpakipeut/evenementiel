# Utiliser l'image PHP officielle avec Apache
FROM php:8.1-apache

# Installer les d√©pendances syst√®me minimales
RUN apt-get update && apt-get install -y \
    git \
    && rm -rf /var/lib/apt/lists/*

# Activer les modules Apache n√©cessaires
RUN a2enmod rewrite headers

# Configurer PHP pour afficher les erreurs
RUN echo "display_errors = On" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini \
    && echo "error_reporting = E_ALL" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini

# D√©finir le r√©pertoire de travail
WORKDIR /var/www/html

# Copier les fichiers de l'application
COPY . /var/www/html/

# Configurer les permissions
RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 755 /var/www/html \
    && mkdir -p /var/log/apache2 \
    && chown -R www-data:www-data /var/log/apache2 \
    && chmod -R 755 /var/log/apache2

# Exposer le port (Railway d√©finira le port)
EXPOSE $PORT

# Cr√©er un script de d√©marrage simple
RUN echo '#!/bin/bash' > /start.sh && \
    echo 'echo "üöÄ D√©marrage du conteneur..."' >> /start.sh && \
    echo 'echo "üåê D√©marrage dApache sur le port $PORT..."' >> /start.sh && \
    echo 'sed -i "s/Listen 80/Listen $PORT/g" /etc/apache2/ports.conf' >> /start.sh && \
    echo 'apache2-foreground' >> /start.sh && \
    chmod +x /start.sh

# D√©marrer avec le script personnalis√©
CMD ["/start.sh"] 